#:kivy 2.0.0
#:include kv/selectionscreen.kv
#:include kv/sessionscreen.kv
#:include kv/datascreen.kv
#:include kv/schedulescreen.kv
#:include kv/graphscreen.kv
#:include kv/viewsessionsscreen.kv


MDScreen:

    MDBottomNavigation: 
    
        MDBottomNavigationItem:
            name: 'select'
            text: 'Workout'
            icon: 'run'
            
            ScreenManager:
                id: workout_sm

                SelectionScreen:
                    name: "selection_screen"
                    id: selection_screen

        MDBottomNavigationItem:
            name: 'data'
            text: 'Data'
            icon: 'chart-line'
            on_tab_press: data_screen.on_pre_enter()

            ScreenManager:
                id: data_sm

                DataScreen:
                    name: "data_screen"
                    id: data_screen

                GraphScreen:
                    name: 'graph_screen'
                    id: graph_screen

                ViewSessionsScreen:
                    name: 'view_sessions_screen'
                    id: view_sessions_screen


        MDBottomNavigationItem:
            name: 'schedule'
            text: 'Schedule'
            icon: 'calendar'

            
            ScheduleScreen:
                name: 'schedule_screen'
                id: schedule_screen